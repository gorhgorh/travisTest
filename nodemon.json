{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "test",
    "testData",
    "buildDb",
    "package.json",
    ".travis.yml",
    "nodemon.json",
    ".editorconfig",
    ".eslintrc.js",
    ".vscode/*",
    "app/**/*"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
